@model IEnumerable<NeatBurguerU2.Models.Clasificacion>
@{

    Layout = "Layout";
}

<section class="menu2">


    @foreach (var c in Model)
    {
        <h1>@c.Nombre</h1>
        @foreach (var m in c.Menus)
        {
            <div>
                <img src="images/@(m.Id).jpg" />
                <h1>@m.Nombre</h1>
                <h2>@m.Precio.ToString("c")</h2>
                <p>@m.Descripción</p>
            </div>
        }

    }



</section>
